<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tag</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
        <td><%= link_to book.tag,search_book_path(search_word: book.tag) %></td>
        <td id = "favorite_buttons_<%= book.id %>">
          <%= render "favorites/favorites", book: book %>
        </td>
        <td>
          <p><%= "コメント数：#{book.book_comments.count} " %></p>
        </td>
        <td>
          <%= render "books/rate", book: book %>
        </td>
        <td>
          <p>閲覧数: <%= book.view_counts.count %></p>
        </td>
      </tr>
    <% end %>
  </tbody>
  
  <%= form_with url: user_search_path(@user), method: :get do |f| %>
  <%= f.date_field :created_at %>
  <%= f.submit '検索', class: 'btn btn-outline-primary'  %>
  <% end %>

  <div id="search_result">
  <% if @search_book.present? %>
    <%= render 'users/search', search_book: @search_book %>
  <% end %>
  </div>

</table>


